# turns off the license screen
startup_message off

# Status bar
hardstatus on
hardstatus alwayslastline "%{b kw} %H %{r}%1` %{w}| %{g}%c %{w}| %{y}%d.%m.%Y %{w}| %{g}%l %{w}| %{-b kw}%u %-Lw%{= rW}%50> %n%f %t %{-}%+Lw%<"

# define a bigger scrollback, default is 100 lines.
defscrollback 10000